@inherits TheFooterBase

<div class="pre-container">
    <div class="container">
        <MudCard Elevation="0">
            <MudCardContent Class="p-0 d-flex gap-4">
                <section class="about" style="width:18%">
                    <MudLink Href="home" Class="d-block mb-4 pl-4">
                        <MudImage Src="/assets/images/logo.jpg" Height="48" Alt="Beta Cinema Logo" />
                    </MudLink>

                    <div class="d-flex flex-column gap-2">
                        @foreach (var item in aboutItems)
                        {
                            <p class="item"><i class="fas fa-angle-right px-2" style="font-size:10px"></i>@item</p>
                        }
                    </div>
                </section>

                <section class="cinemas" style="width:42%">
                    <p class="section-title">Cụm rạp Beta</p>
                    <div class="d-flex flex-column" style="gap:10px">
                        @foreach (var item in cinemaList)
                        {
                            <p class="item"><i class="fas fa-angle-right px-2" style="font-size:10px"></i>@item</p>
                        }
                    </div>
                </section>

                <section class="connect" style="width:20%">
                    <p class="section-title">Kết nối với chúng tôi</p>
                    <div class="d-flex flex-column" style="gap:10px">
                        <div class="d-flex gap-3 align-items-center">
                            <i class="fa-brands fa-square-facebook" style="font-size:28px"></i>
                            <i class="fa-brands fa-youtube" style="font-size:28px"></i>
                            <i class="fa-brands fa-tiktok" style="font-size:24px"></i>
                            <i class="fa-brands fa-square-instagram" style="font-size:28px"></i>
                        </div>
                        <MudImage Src="/assets/images/notified.png" Width="200" Alt="Notified" />
                    </div>
                </section>

                <section class="contact" style="width:20%">
                    <p class="section-title">Liên hệ</p>
                    <div class="d-flex flex-column" style="gap:10px">
                        <p style="font-size:17px">CÔNG TY CỔ PHẦN BETA MEDIA</p>
                        <div class="d-flex flex-column" style="gap:10px;font-size:12px">
                            <p>
                                Giấy chứng nhận ĐKKD số: 0106633482 - Đăng ký lần đầu ngày 08/09/2014 tại Sở Kế hoạch và Đầu tư Thành phố Hà Nội
                            </p>
                            <p>Địa chỉ trụ sở: Tầng 3, số 595, đường Giải Phóng, phường Giáp Bát, quận Hoàng Mai, thành phố Hà Nội</p>
                            <p>Hotline: 1900 636807</p>
                            <p>Email: cskh@betacorp.vn</p>
                        </div>

                        <div class="d-flex flex-column mt-2" style="gap:10px;font-size:17px">
                            <p style="font-weight:600">Liên hệ hợp tác kinh doanh:</p>
                            <p>Email: phuongdh@betagroup.vn</p>
                            <p>Điện thoại: 0906 669 169</p>
                        </div>
                        <p></p>
                    </div>
                </section>
            </MudCardContent>
        </MudCard>
    </div>
</div>