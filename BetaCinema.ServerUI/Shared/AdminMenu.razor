@inherits AdminMenuBase

<AuthorizeView Roles="Admin">
    <Authorized>
        <nav class="d-flex flex-column gap-2">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin" Match="NavLinkMatch.All">
                    <i class="fas fa-house mr-2" style="font-size:16px"></i> Home
                </NavLink>
            </div>

            @foreach (var item in sidebarItems)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@item.Href">
                        <i class="@item.IconClass mr-2" style="font-size:16px"></i> @item.Title
                    </NavLink>
                </div>
            }
        </nav>
    </Authorized>
</AuthorizeView>