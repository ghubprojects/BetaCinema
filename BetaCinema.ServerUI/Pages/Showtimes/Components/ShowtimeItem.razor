@using BetaCinema.ServerUI.Features.MovieShowtimes
@inherits ShowtimeItemBase

<MudCard Elevation="0" Class="d-flex gap-3 my-9 pr-6" Style="@($"background-color:{Colors.Grey.Lighten4};{wrapperStyles}")">
    <MudImage Src="@($"/assets/images/posters/{MovieData.Poster}")" Style="@posterStyles" />

    <MudCardContent Class="p-0 mb-8">
        <MudLink Href="@uri" Class="d-block my-1" Underline="Underline.None">
            <span class="@movieTitleClasses">@MovieData.MovieName</span>
        </MudLink>

        <div class="d-flex gap-3">
            <MudText>
                <i class="fas fa-tags" style="font-size:16px;color:#03599d"></i>
                <span class="info">Category</span>
            </MudText>

            <MudText>
                <i class="far fa-clock" style="font-size:14px;color:#03599d"></i>
                <span class="info">@($"{MovieData.Duration} phút")</span>
            </MudText>
        </div>

        <div class="d-flex flex-wrap gap-3 mt-6">
            @foreach (var showtime in showtimeList)
            {
                <MovieShowtimeItem ShowtimeData="showtime" />
            }
        </div>
    </MudCardContent>
</MudCard>
